{
  "name": "mailfin",
  "version": "1.0.0",
  "description": "A simple email notifier for Jellyfin",
  "main": "index.js",
  "scripts": {
    "dev": "node -r ts-node/register --env-file=.env src/index.ts",
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:dry": "eslint --fix-dry-run"
  },
  "keywords": [
    "jellyfin",
    "email",
    "notifier",
    "webhooks",
    "mailfin",
    "server",
    "media",
    "tmdb"
  ],
  "author": "Esteban Bermudez",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.8",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.21.1",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16"
  }
}
